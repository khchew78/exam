<div class="container">
  <%= form_with(model: branch, local: true) do |form| %>
    <% if branch.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(branch.errors.count, "error") %> prohibited this branch from being saved:</h2>
  
        <ul>
        <% branch.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <table class="table table-dark table-hover">
        <tr>
          <th><%= form.label :name %></th>
          <td><%= form.text_field :name %></td>
        </tr>
        
        <tr>
          <th><%= form.label :address %></th>
          <td><%= form.text_field :address %></td>
        </tr>
        
        <tr>
          <th><%= form.label :phone %></th>
          <td><%= form.text_field :phone %></td>
        </tr>
      </table>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>