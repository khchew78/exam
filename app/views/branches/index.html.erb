<div class="container">
  <p id="notice"><%= notice %></p>
  
  <h1>Branches</h1>
  
  <table class="table table-dark table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Phone</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @branches.each do |branch| %>
        <tr>
          <td><%= branch.name %></td>
          <td><%= branch.address %></td>
          <td><%= branch.phone %></td>
          <td><%= link_to 'Show', branch %></td>
          <td><%= link_to 'Edit', edit_branch_path(branch) %></td>
          <td><%= link_to 'Destroy', branch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <p><%= link_to '<button type="button" class="btn btn-primary">New Branch</button>'.html_safe, new_branch_path %></p>
</div>
