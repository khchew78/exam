<div class="container">
  <p id="notice"><%= notice %></p>
<h2> KIDDOY Photo Galleries</h2>
  
  <table class="table table-dark table-hover">
    <thead>
      <tr>
        <th>Image</th>
        <th>Activity</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @photo_galleries.each do |photo_gallery| %>
        <tr>
          <td><%= image_tag photo_gallery.image.variant(resize: "200x200") if photo_gallery.image.attached? %></td>
          <td><%= photo_gallery.activity %></td>
          <td><%= photo_gallery.description %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
    <p class="center_text"><%= link_to 'Back', main_page_index_path %></p>
</div>