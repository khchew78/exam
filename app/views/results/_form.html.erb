<%= form_with(model: result, local: true) do |form| %>
  <% if result.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(result.errors.count, "error") %> prohibited this result from being saved:</h2>

      <ul>
      <% result.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
      <%= form.label :examination_id %>
      <%= form.select :examination_id, Examination.all.map {|examination| [examination.title, examination.id] }, { include_blank: "Please select your exam name" } %>
  </div>

  <div class="field">
      <%= form.label :student_id %>
      <%= form.select :student_id, Student.all.map {|student| [student.name, student.id] }, { include_blank: "Please select your student name" } %>
  </div>

  <div class="field">
    <%= form.label :english %>
    <%= form.text_field :english %>
  </div>
  
  <div class="field">
    <%= form.label :chinese %>
    <%= form.text_field :chinese %>
  </div>
  
  <div class="field">
    <%= form.label :math %>
    <%= form.text_field :math %>
  </div>
  
  <div class="field">
    <%= form.label :malay %>
    <%= form.text_field :malay %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
